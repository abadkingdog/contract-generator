.ui.button {
  border: 0;

  &.wide {
    min-width: 250px;
  }

  &.block {
    min-width: 100%;
  }

  &.tall {
    min-height: 60px;
  }

  &.full {
    margin-left: 0;
    margin-right: 0;
    width: 100% !important;
    text-align: left !important;
  }

  &.link {
    padding: 0;
    background-color: transparent;
    border: 0;
    box-shadow: none;

    &:hover {
      box-shadow: none;
      color: inherit;
    }
  }
}
